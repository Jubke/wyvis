- content_for :title do
  = scenario.name

.row.compare-container
  - 2.times do |i|
    .implementation-container{id: 'container-' + i.to_s}
      .top-controls
        = form_tag(remote_implementation_path(scenario), method: 'get', format: 'javascript', remote: true, class: 'form-inline form-impl-select') do
          %input#index{type: 'hidden', name: 'index', value: i}
          .form-group
            = select_tag :id, options_from_collection_for_select(scenario_implementations, 'id', 'lib_name'), class: 'form-control', prompt: 'Select an implementation', onchange: 'javascript: $( this ).trigger("submit.rails")'
        %button.btn.btn-icon.btn-full-screen
          %span.glyphicon
      .implementation
        .select-notification

  - @implementations.each_with_index do |impl, i|
    :javascript
      $("#container-#{i} .form-impl-select select" ).val('#{impl.id}').trigger("change");